{
  "name": "react-app",
  "version": "1.0.0",
  "description": "A React Boilerplate Configuration",
  "main": "index.js",
  "scripts": {
    "build": "webpack-cli --mode=production --env=prod",
    "start": "webpack-dev-server --mode=development --env=dev",
    "precommit": "lint-staged",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "lint-staged": {
    "*.js?(x)": [
      "prettier --write",
      "git add"
    ]
  },
  "author": "Boy With Silver Wings <agney@outlook.in>",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-jest": "^22.4.1",
    "babel-loader": "^8.0.4",
    "clean-webpack-plugin": "^0.1.18",
    "compression-webpack-plugin": "^1.1.10",
    "copy-webpack-plugin": "^4.5.0",
    "css-loader": "^0.28.10",
    "cssnano": "^4.1.4",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "jest-enzyme": "^4.2.0",
    "lint-staged": "^4.3.0",
    "npm-install-webpack-plugin": "^4.0.5",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.0.7",
    "prettier": "^1.11.1",
    "purify-css": "^1.2.6",
    "purifycss-webpack": "^0.7.0",
    "react-addons-test-utils": "^15.6.2",
    "react-test-renderer": "^15.6.2",
    "style-loader": "^0.18.2",
    "stylelint": "^8.4.0",
    "stylelint-config-standard": "^17.0.0",
    "tapable": "^1.0.0",
    "uglifyjs-webpack-plugin": "^1.2.2",
    "url-loader": "^0.5.9",
    "webpack": "^4.14.0",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.2",
    "webpack-monitor": "^1.0.14",
    "workbox-webpack-plugin": "^2.1.3"
  },
  "dependencies": {
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "whatwg-fetch": "^2.0.4"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/scripts/test.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/scripts/**"
    ],
    "testPathIgnorePatterns": [
      "/node_modules",
      "/scripts",
      "/build-utils"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BoyWithSilverWings/react-app.git"
  }
}
